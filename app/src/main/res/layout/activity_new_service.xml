<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent" android:layout_width="fill_parent">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true">


        <androidx.cardview.widget.CardView

            android:id="@+id/CardView1"
            app:cardUseCompatPadding="true"
            app:contentPadding="12dp"
            app:cardCornerRadius="8dp"
            android:visibility="visible"
            app:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp"
                tools:context=".ui.NewServiceActivity"
                android:animateLayoutChanges="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Registro de servicio"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-black"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="11dp"
                    android:animateLayoutChanges="true">


                    <TextView
                        android:text="Nombre del servicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/nombreServicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textAutoComplete"
                        android:layout_marginBottom="15dp"/>



                    <TextView
                        android:text="DescripciÃ³n"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:layout_marginBottom="15dp"/>


                    <TextView
                        android:text="Nombre del equipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/nombreEquipo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textAutoComplete"
                        android:layout_marginBottom="15dp"/>


                    <TextView
                        android:text="Serial del equipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/serialEquipo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:layout_marginBottom="15dp"/>


                    <TextView
                        android:text="Horometro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <EditText android:id="@+id/horometro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:layout_marginBottom="15dp"/>


                    <Button
                        android:id="@+id/btn_siguiente_one"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_button_next"
                        android:text="Siguiente"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </LinearLayout>




            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView

            android:id="@+id/CardView2"
            app:cardUseCompatPadding="true"
            app:contentPadding="12dp"
            app:cardCornerRadius="8dp"
            android:visibility="gone"
            app:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp"
                tools:context=".ui.NewServiceActivity"
                android:animateLayoutChanges="true">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="11dp"
                    android:animateLayoutChanges="true">


                    <TextView
                        android:text="Fecha de entrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/fechaEntrada"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:layout_marginBottom="15dp"
                        android:maxLines="1"/>




                    <TextView
                        android:text="Fecha de salida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/fechaSalida"
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:layout_marginBottom="15dp"
                        android:maxLines="1"/>


                    <TextView
                        android:text="Hora de entrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/horaEntrada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="time"
                        android:clickable="true"
                        android:focusable="false"
                        android:layout_marginBottom="15dp"/>


                    <TextView
                        android:text="Hora de salida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"  />

                    <EditText android:id="@+id/horaSalida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="time"
                        android:clickable="true"
                        android:focusable="false"
                        android:layout_marginBottom="15dp"/>


                    <Button
                        android:id="@+id/btn_siguiente_two"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_button_next"
                        android:text="Siguiente"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />



                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView

            android:id="@+id/CardView3"
            app:cardUseCompatPadding="true"
            app:contentPadding="12dp"
            app:cardCornerRadius="8dp"
            android:visibility="gone"
            app:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp"
                tools:context=".ui.NewServiceActivity"
                android:animateLayoutChanges="true">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="11dp"
                    android:animateLayoutChanges="true">


                    <TextView
                        android:text="Planta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/plantaId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:layout_marginBottom="15dp"/>


                    <TextView
                        android:text="Cliente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/clienteId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:layout_marginBottom="15dp"/>



                    <TextView
                        android:text="Foto Inicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/fotoInicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:layout_marginBottom="15dp"/>



                    <TextView
                        android:text="Foto Proceso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/fotoProceso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:layout_marginBottom="15dp"/>




                    <TextView
                        android:text="Foto Fin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/fotoFin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:layout_marginBottom="15dp"/>



                    <Button
                        android:id="@+id/btn_save_service"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_button_next"
                        android:text="Guardar"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </LinearLayout>





            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>


</ScrollView>